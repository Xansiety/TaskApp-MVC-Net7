@model UsuariosListadoViewModel
@{
    ViewBag.Title = "Listado de Usuarios";
    Layout = "../Shared/_Layout";
}


<h2>Listado de usuarios</h2>


@if (Model.Mensaje is not null)
{
    <div class="alert alert-success" role="alert">
        @Model.Mensaje
    </div>
}

@if (Model.Usuarios is not null)
{
    <form method="post">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Acción</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in Model.Usuarios)
                {
                    <tr>
                        <td>
                            <button class="btn btn-primary me-2" asp-action="HacerAdmin" asp-route-email="@usuario.Email">
                                Hacer Administrador
                            </button>
                            <button class="btn btn-warning me-2" asp-action="RemoverAdmin" asp-route-email="@usuario.Email">
                                Remover Administrador
                            </button>
                        </td>
                        <td>
                            @usuario.Email
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
}
else
{
    <div class="alert alert-danger" role="alert">
        No hay usuarios para mostrar
    </div>
}